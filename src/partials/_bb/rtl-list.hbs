---
component: rtl-list
hide: true
published: false
---

<h2 class="bb-page-title">RTL Pages</h2>
<ul class="file-list">
	{{#withSort pages "filename"}}
		{{#if data.rtl}}
			{{#unless data.hide}}
				<li class="file">
					<a href="{{relative dest this.dest}}">{{data.title}} <span>{{filename}}</span></a>
				</li>
			{{/unless}}
		{{/if}}
	{{/withSort}}
</ul>
